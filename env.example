# =====================================
# Flask Application Configuration
# =====================================

# Секретный ключ для Flask (ОБЯЗАТЕЛЬНО изменить в продакшене!)
SECRET_KEY=your_super_secret_key_here_change_in_production

# Режим Flask (development/production)
FLASK_ENV=development
FLASK_DEBUG=true

# =====================================
# PostgreSQL Database for Profiles
# (ТОЛЬКО ЧТЕНИЕ - продакшен база)
# =====================================

PROFILES_DB_HOST=localhost
PROFILES_DB_PORT=5432
PROFILES_DB_NAME=farm_profiles
PROFILES_DB_USER=readonly_user
PROFILES_DB_PASSWORD=readonly_password

# Альтернативно можно использовать полную строку подключения:
# PROFILES_DATABASE_URL=postgresql://readonly_user:readonly_password@localhost:5432/farm_profiles

# =====================================
# PostgreSQL Database for Admin Panel
# (ПОЛНЫЕ ПРАВА - отдельная база для админов)
# =====================================

ADMIN_DB_HOST=localhost
ADMIN_DB_PORT=5432
ADMIN_DB_NAME=admin_panel
ADMIN_DB_USER=admin_user
ADMIN_DB_PASSWORD=admin_password

# Альтернативно можно использовать полную строку подключения:
# ADMIN_DATABASE_URL=postgresql://admin_user:admin_password@localhost:5432/admin_panel

# =====================================
# Railway Configuration (для деплоя)
# =====================================

# На Railway эти переменные будут автоматически заполняться
# из настроек PostgreSQL сервисов:
# DATABASE_URL - основная база (можно использовать для админов)
# PROFILES_DATABASE_URL - дополнительная база для профилей

# =====================================
# Development Configuration
# =====================================

# Порт для разработки
PORT=8000

# Логирование
LOG_LEVEL=INFO
